    <script>
        function evaluatePrompt() {
            const prompt = document.getElementById("prompt").value;
            const feedback = document.getElementById("feedback");

            let comments = [];

            if (!prompt.includes("je suis") && !prompt.includes("nous sommes")) {
                comments.push("üîπ Vous n'avez pas pr√©cis√© qui vous √™tes.");
            }
            if (!prompt.includes("destin√© √†") && !prompt.includes("pour un public")) {
                comments.push("üîπ Vous n'avez pas d√©fini votre public.");
            }
            if (!prompt.includes("dans le contexte de") && !prompt.includes("dans le cadre de")) {
                comments.push("üîπ Vous n'avez pas pr√©cis√© le contexte.");
            }
            if (prompt.length < 50) {
                comments.push("üîπ Votre prompt semble trop court. Essayez d'√™tre plus complet.");
            }

            if (comments.length === 0) {
                feedback.innerHTML = "‚úÖ Excellent travail ! Votre prompt est bien structur√©.";
            } else {
                feedback.innerHTML = `<p>Voici quelques suggestions :</p><ul>${comments.map(c => `<li>${c}</li>`).join("")}</ul>`;
            }
        }
    </script>
